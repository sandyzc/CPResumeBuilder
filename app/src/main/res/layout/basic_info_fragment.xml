<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/basic_info_frag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="freaklab.sandyz.com.cpresumebuilder.activitys.InsertDataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_white"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Personal Details"
            android:textColor="@color/White"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/data_photo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@color/White"
            android:contentDescription="photo"
            android:src="@drawable/camera" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:textColor="@color/White">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/data_person_Name"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Name"
                    android:textColor="@color/White"
                    app:met_primaryColor="@color/White"
                    app:met_baseColor="@color/White"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelText="Name"
                    app:met_singleLineEllipsis="true"
                    />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/data_title"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Professional Title"
                    android:textColor="@color/White"
                    app:met_baseColor="@color/White"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelAnimating="true"
                    app:met_floatingLabelText="Professional Title"
                    app:met_primaryColor="@color/White"
                    app:met_singleLineEllipsis="true" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/data_summery"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Summery"
                    android:textColor="@color/White"
                    app:met_baseColor="@color/White"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelAnimating="true"
                    app:met_primaryColor="@color/White"
                    app:met_floatingLabelText="Summery"
                    app:met_singleLineEllipsis="true" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/data_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:textColor="@color/White"
                    app:met_baseColor="@color/White"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelAnimating="true"
                    app:met_primaryColor="@color/White"
                    app:met_floatingLabelText="Phone Number"
                    app:met_singleLineEllipsis="true" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/data_email_id"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Email ID"
                    android:inputType="textEmailAddress"
                    app:met_primaryColor="@color/White"
                    android:textColor="@color/White"
                    app:met_baseColor="@color/White"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelAnimating="true"
                    app:met_floatingLabelText="Email ID"
                    app:met_singleLineEllipsis="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Address"
                    android:textColor="@color/White"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/data_address_line1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:hint="line 1"
                    android:textColor="@color/White"
                    app:met_baseColor="@color/White"
                    app:met_primaryColor="@color/White"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelAnimating="true"
                    app:met_floatingLabelText="Address Line 1"
                    app:met_singleLineEllipsis="true" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/data_address_line2"
                    android:layout_width="match_parent"
                    app:met_primaryColor="@color/White"
                    android:layout_height="80dp"
                    android:hint="line 2"
                    android:textColor="@color/White"
                    app:met_baseColor="@color/White"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelAnimating="true"
                    app:met_floatingLabelText="Address Line 2"
                    app:met_singleLineEllipsis="true" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/data_address_street"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:met_primaryColor="@color/White"
                    android:hint="Street"
                    android:textColor="@color/White"
                    app:met_baseColor="@color/White"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelAnimating="true"
                    app:met_floatingLabelText="Address Street"
                    app:met_singleLineEllipsis="true" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/data_address_pincode"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:hint="Pincode"
                    android:inputType="number"
                    android:textColor="@color/White"
                    app:met_baseColor="@color/White"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelAnimating="true"
                    app:met_floatingLabelText="Pincode"
                    app:met_primaryColor="@color/White"
                    app:met_singleLineEllipsis="true" />


                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/data_objective"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    app:met_primaryColor="@color/White"
                    android:hint="Objective"
                    android:textColor="@color/White"
                    app:met_baseColor="@color/White"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelAnimating="true"
                    app:met_floatingLabelText="Professional Objective" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_basic_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:elevation="4dp"
        android:tint="@color/White"
        app:srcCompat="@android:drawable/ic_input_add" />

</android.support.design.widget.CoordinatorLayout>