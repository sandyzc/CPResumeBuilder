<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:layout_margin="5dp"
    android:layout_gravity="center"
    app:cardElevation="2dp"
    app:contentPadding="5dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/resumes_list_photo"
            android:layout_width="80sp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginStart="2dp"
            android:src="@mipmap/ic_launcher_round" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginRight="5sp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/resumes_list_name"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/just_a_line"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/straight_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/resumes_list_designaion"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="5dp"
                    android:text="Engineer"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="with"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp"
                    android:textStyle="bold"
                />

                <TextView
                    android:id="@+id/resumes_list_experience"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginLeft="5dp"
                    android:text="6 Years"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                   />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Experience"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/just_a_line_below_xp"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/straight_line"
                app:layout_constraintBottom_toTopOf="@+id/resumes_list_breif_description"
                app:layout_constraintStart_toEndOf="@+id/resumes_list_photo"
                app:layout_constraintTop_toBottomOf="@+id/resumes_list_experience" />


            <TextView
                android:id="@+id/resumes_list_breif_description"
                android:layout_width="274dp"
                android:layout_marginTop="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/descrption_sample"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_weight="2"
              />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>